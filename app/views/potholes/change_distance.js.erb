var beforeMarkers = markers;
var beforeDist = <%= @before_dist %>
var afterDist = <%= @distance %>
markers = handler.addMarkers(<%=raw @hash.to_json %>);
console.log(markers)
if( afterDist > beforeDist ){
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
}
else{
  handler.resetBounds();
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
}
